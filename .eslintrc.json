{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "hexagonal-architecture"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/modules/**/*.ts"
      ],
      "rules": {
        "hexagonal-architecture/enforce": [
          "error"
        ]
      }
    }
  ]
}
